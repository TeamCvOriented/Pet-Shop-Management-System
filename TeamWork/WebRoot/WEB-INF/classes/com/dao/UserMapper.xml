<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="IUserDao">
	<resultMap id="UserResultMap" type="com.entity.User">
        <result column="uId" property="uId"/>
        <result column="uName" property="uName"/>
        <result column="uPassword" property="uPassword"/>
         <result column="isManager" property="isManager"/>
          <result column="uEmail" property="uEmail"/>
          <result column="uPhone" property="uPhone"/>
          <result column="uWallet" property="uWallet"/>
    </resultMap>

    <select id="findAllUsers" resultType="com.entity.User" resultMap="UserResultMap" >
        select * from User
    </select>
	
	<select id="findUserBYuId" parameterType="int" resultType="com.entity.User" resultMap="UserResultMap" >
        select * from User where uId=#{uId}
    </select>
    
	<insert id="addUser" parameterType="com.entity.User" >
		insert into User(uName,uPassword,isManager,uEmail,uPhone,uWallet) values(#{uName},#{uPassword},#{isManager},#{uEmail},#{uPhone},#{uWallet})
	</insert>
	
    <update id="updateUser" parameterType="com.entity.User">
        UPDATE User SET uEmail=#{uEmail},uName=#{uName},uPhone=#{uPhone} WHERE uId = #{uId}
    </update>
    <update id="updatewallet" parameterType="com.entity.User">
        UPDATE User SET uWallet=#{uWallet} WHERE uId = #{uId}
    </update>
</mapper>